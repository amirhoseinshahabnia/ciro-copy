{% schema %}
  {
    "name": "Full Width Slider",
    "settings": [],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Slide Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Default",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

{% for block in section.blocks %}
  <div class="slide" style="background-image: url({{ block.settings.image | img_url: 'master' }});">
    <!-- You can add more content here -->
  </div>
{% endfor %}

{% stylesheet %}
  .slide {
    min-width: 100%;
    height: 500px; /* Adjust this value as per your need */
    background-size: cover;
    background-position: center;
  }
{% endstylesheet %}

{% javascript %}
  let index = 0;
  const slides = document.querySelectorAll('.slide');
  const totalSlides = slides.length;

  setInterval(() => {
    slides[index].style.display = 'none';
    index = (index + 1) % totalSlides;
    slides[index].style.display = 'block';
  }, 3000); // Change slide every 3 seconds
{% endjavascript %}
