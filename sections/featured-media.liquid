    #shopify-section-{{ section.id }} {
        padding-top: {{ padding_top }}px;
        padding-bottom: {{ padding_bottom }}px;
    }
}

/* layout */

@media screen and ( min-width: 749px ) {

    .ft-sctn-{{ section.id }} {
        max-width: {{ section_max_width }}%;
    }
}

@media screen and ( max-width: 768px ) {

